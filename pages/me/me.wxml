<!--pages/me/me.wxml-->
<view class='UCenter-bg bg-gradual-orange'  bindtap='login'>
    <!-- <image src="../../images/src/logo.png" class="profile icon"></image> -->
  <view class='text-xl'>用GitHub登录
  </view>
  <view class='margin-top-sm'>
    <text>登录后可提交干货</text>
  </view>
  <image src='https://image.weilanwl.com/gif/wave.gif' mode='scaleToFill' class='gif-wave'></image>

</view>
<view class='padding flex text-center text-grey bg-white shadow-warp'>
  <view class='flex flex-sub flex-direction solid-right'>
    <view class="text-xxl text-orange">531</view>
    <view class="margin-top-sm">
      <text></text> 小程序</view>

  </view>
  <view class='flex flex-sub flex-direction solid-right'>
    <view class="text-xxl text-blue">471</view>
    <view class="margin-top-sm">
      <text ></text> Flutter</view>
  </view>
  <view class='flex flex-sub flex-direction solid-right'>
    <view class="text-xxl text-green">543</view>
    <view class="margin-top-sm">
      <text ></text> Android</view>
  </view>

  <view class='flex flex-sub flex-direction'>
    <view class="text-xxl text-purple">592</view>
    <view class="margin-top-sm">
      <text></text> ios</view>
  </view>
</view>

<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
  <view class="cu-item arrow">
    <view class='content' bindtap='handleTapMiddle' data-title='干货推荐'>
      <text class='icon-subscription text-grey'></text>
      <text class='text-grey'>干货推荐</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <navigator class='content' bindtap='handleTapMiddle' data-title='仓库地址' data-url='https://github.com/ZQ330093887/GankWX'>
      <text class='icon-discover text-green'></text>
      <text class='text-grey'>仓库地址</text>
    </navigator>
  </view>
  <view class="cu-item arrow">
    <navigator class='content' bindtap='handleTapMiddle' data-title='版本更新'>
      <text class='icon-upload text-green'></text>
      <text class='text-grey'>版本更新</text>
    </navigator>
  </view>
  <view class="cu-item arrow">
    <button class='cu-btn content' bindtap='handleTapMiddle' data-title='关于作者' data-url='https://www.jianshu.com/u/9681f3bbb8c2'>
      <text class='icon-writefill text-cyan'></text>
      <text class='text-grey'>关于作者</text>
    </button>
  </view>
  <view class="cu-item arrow">
    <button class='cu-btn content' bindtap='handleTapMiddle' data-title='感谢说明'>
      <text class='icon-formfill text-yellow'></text>
      <text class='text-grey'>感谢说明</text>
    </button>
  </view>
  

</view>

<view class='cu-tabbar-height'></view>