/* pages/me/me.wxss */

.me {
  background-color: white;
}

.me_top_hander_top {
  background-color: white;
  border-top: 10px solid #eee;
  border-bottom: 10px solid #f2f1f6;
  padding-top: 15rpx;
  width: 100%;
  height: 300rpx;
}

.me_top_hander {
  background: #eee;
  width: 90%;
  height: 150rpx;
  display: flex;
  align-items: center;
  border-bottom-left-radius: 10px;
  border-top-left-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
  margin: auto;
}

.profile {
  width: 100rpx;
  height: 100rpx;
  margin-left: 50rpx;
  margin-right: 25rpx;
  border: 0 solid #daa520;
  border-radius: 100rpx;
  background-color: #daa520;
}

.me_top {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.me_top_nav {
  width: 100%;
  height: 100%;
  display: flex;
  margin-top: 25rpx;
}

.me_nav_01 {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.me_nav_02 {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.me_nav_03 {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.me_nav_04 {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.me_login_content {
  font-size: 12px;
  margin-top: 5px;
  color: rgba(0, 0, 0, 0.5);
}

.me_nav_title {
  font-size: 14px;
  margin-top: 20rpx;
}

.me_nav_content {
  font-size: 14px;
  margin-top: 10rpx;
  color: #666;
  border-right: 1px solid #f2f1f6;
}

.menu_item {
  position: relative;
  float: left;
  padding: 10px 10px;
  width: 33.33333%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.menu_item_01 {
  position: relative;
  float: left;
  padding: 15px 10px;
  width: 25%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 10px solid #f2f1f6;
  border-bottom: 10px solid #f2f1f6;
}

.menu_item:active {
  background-color: #ececec;
}

.menu_icon {
  width: 50px;
  height: 50px;
  padding-bottom: 5px;
}

.menu_text {
  display: block;
  text-align: center;
  color: #000;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui_cell {
  position: relative;
  display: flex;
  background-color: white;
  padding: 15px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  font-size: 14px;
}

.weui_cell:nth-child(2n+1) {
  margin-bottom: 10px;
}

.badge {
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}

.with_arrow {
  position: absolute;
  right: 15px;
  width: 15px;
  height: 15px;
}
