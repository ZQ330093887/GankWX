<!--pages/wetify/update/update.wxml-->
<view class="updata-bg">
  <view class="cu-timeline" wx:for="{{updateList}}">

    <view class='cu-item text-orange'>
      <view class="bg-gradual-orange content shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-white text-orange">{{item.vCode}}</view>
          <view class="cu-tag line-white">{{item.time}}</view>
        </view>
        <view class='margin-top-sm text-content'>
          <view>{{item.vTitle}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class='update-footer'>
    <image src='../../images/src/smile.png' class='update-footer-img'></image>
    <view class='update-footet-bottom'>
      <text class='update-footer-title'>感谢你对我的关注,</text>
      <text class="update-footer-content"> 希望这些更新能给你带来帮助 </text>
    </view>

  </view>
</view>