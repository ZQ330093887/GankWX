/* pages/calendar/calendar.wxss */

.calendar-wrapper {
  width: 100%;
  border-top: 1px #f5f5f5 solid;
  box-sizing: border-box;
  font-size: 24rpx;
  transition: all 0.3s;
  transform: translateY(-100%);
}

.calendar-wrapper.active {
  transform: translateY(0%);
}

.iconfont .left, .iconfont .right {
  display: block;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
}

.iconfont .left {
  border-right: 40rpx solid transparent;
}

.iconfont .right {
  border-left: 40rpx solid transparent;
}

.iconfont .left.color {
  border-right-color: #daa520;
}

.iconfont .right.color {
  border-left-color: #daa520;
}

.calendar-panel {
  background: #f2f1f6;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  height: 80rpx;
  color: #daa520;
}
.have-img{
  height: 20rpx;
  width: 20rpx;
}
.have {
  position: absolute;
  left: 0;
  top: 15rpx;
  padding: 0 10rpx;
  padding-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  align-items: center;
  border-right: none;
  font-size: 20rpx;
  color: #daa520;
}

.backtoday {
  position: absolute;
  right: 0;
  top: 15rpx;
  padding: 0 10rpx;
  padding-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 1px #daa520 solid;
  border-right: none;
  font-size: 28rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  color: #daa520;
  /* background: rgba(82, 184, 245, 0.1); */
}

.date-befor, .date-after {
  margin-top: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.calendar-panel-box {
  background: #f2f1f6;
  display: flex;
    margin-top: 130rpx;
}

.calendar-header {
  background: #f2f1f6;
  display: flex;
}

.calendar-header view {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  color: #daa520;
  margin-top: 50rpx;
}

.calendar-body {
  display: flex;
  flex-wrap: wrap;
}

.calender-body-date-week {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  border-bottom: 1px #f5f5f5 solid;
}

.date {
  position: relative;
  width: 100%;
  text-align: center;
  color: #1c1c1c;
  margin: 10rpx;
  line-height: 100rpx;
}

.placeholder {
  color: #a4a4a4;
}

.date-current {
  position: relative;
  background: #daa520;
  color: #fff;
  width: 79%;
  margin: 20rpx;
  line-height: 70rpx;
  border-radius: 50rpx;
}
